#!/bin/bash

# mount the EFS file system
# must also restart docker and docker agent for the file system to become available to docker containers
sudo yum install -y nfs-utils
sudo stop ecs
sudo mkdir -p /ecostress_data
sudo chmod 777 /ecostress_data
sudo chown ec2-user:ec2-user /ecostress_data
sudo echo "fs-2ca17785.efs.us-west-2.amazonaws.com:/ /ecostress_data nfs4 nfsvers=4.1,rsize=1048576,wsize=1048576,hard,timeo=600,retrans=2 0 0" >> /etc/fstab
sudo mount -a -t nfs4
sudo service docker restart
sudo start ecs

# join the swarm
docker swarm join \
--token SWMTKN-1-35r73rdjb9u0xtsmfuxtct0zrjcbfivltlvm0d6mzhoo1owoyr-dwt6v46bspzwa8udn1v78xmc1 \
172.20.9.112:2377

